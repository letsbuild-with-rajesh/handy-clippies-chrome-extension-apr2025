{
	"manifest_version": 3,
	"name": "Handy Clippies",
	"version": "1.0",
	"description": "A simple Chrome extension to create handy clippies.",
	"action": {
		"default_title": "Click to show popup"
	},
	"background": {
		"service_worker": "background.js"
	},
	"permissions": [
		"scripting",
		"notifications"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"popup/content.html",
				"popup/content.css"
			],
			"matches": [
				"<all_urls>"
			]
		}
	],
	"host_permissions": [
		"<all_urls>"
	]
}